{
  "name": "@captify-io/pmbook",
  "version": "1.0.11",
  "description": "Strategic alignment and business operations platform for government contracting",
  "type": "module",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.18 || >=20"
  },
  "main": "dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./app": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./components": {
      "import": "./dist/components.mjs",
      "types": "./dist/components.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks.mjs",
      "types": "./dist/hooks.d.ts"
    },
    "./lib": {
      "import": "./dist/lib.mjs",
      "types": "./dist/lib.d.ts"
    },
    "./services": {
      "import": "./dist/services.mjs",
      "types": "./dist/services.d.ts"
    },
    "./services/config": {
      "import": "./dist/services.mjs",
      "types": "./dist/services.d.ts"
    },
    "./types": {
      "import": "./dist/types.mjs",
      "types": "./dist/types.d.ts"
    }
  },
  "scripts": {
    "build": "npm run git:commit && npm run version:patch && npm run build:package && npm run git:push && npm run publish:package",
    "build:app": "next build",
    "build:package": "npm run dist",
    "dev": "next dev -p 3050",
    "dev:lib": "tsup --watch",
    "dist": "tsup",
    "git:commit": "git add package.json package-lock.json dist/ src/ && git commit -m \"Package update: $(date)\" || echo \"No changes to commit\"",
    "git:push": "git push origin main",
    "lint": "next lint",
    "publish:package": "npm publish --legacy-peer-deps",
    "start": "next start -p 3000",
    "type-check": "npx tsc --noEmit",
    "version:patch": "npm version patch --no-git-tag-version",
    "clean": "rimraf dist .next",
    "update": "npm install @captify-io/platform@github:captify-io/platform#main --legacy-peer-deps"
  },
  "dependencies": {
    "rimraf": "^6.0.1"
  },
  "peerDependencies": {
    "@captify-io/platform": "^1.0.27",
    "@tailwindcss/postcss": "^4.1.13",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.0.0",
    "next-auth": "5.0.0-beta.25",
    "next-themes": "^0.4.0",
    "react": ">=19.1.1",
    "react-dom": ">=19.1.1",
    "tailwind-merge": "^3.0.0",
    "uuid": "^11.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/captify-io/pmbook.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@types/react": "19.1.1",
    "@types/react-dom": "19.1.1",
    "@types/uuid": "^10.0.0",
    "cross-env": "^7.0.3",
    "esbuild": "0.25.8",
    "eslint": "^9.16.0",
    "eslint-config-next": "^15.5.2",
    "next": "^15.5.2",
    "postcss": "^8.4.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.13",
    "tsup": "^8.5.0",
    "typescript": "5.9.2"
  },
  "module": "dist/app.mjs",
  "author": "Captify IO",
  "license": "MIT",
  "homepage": "https://github.com/captify-io/pmbook#readme",
  "bugs": {
    "url": "https://github.com/captify-io/pmbook/issues"
  }
}
